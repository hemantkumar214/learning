<div id='ajax-data'>
<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'show', article_path(article) %></td>
      <td><%= link_to 'edit', edit_article_path(article) %> </td>
      <td><%= link_to 'delete', article_path(article), method: :delete, data: {confirm: 'are u sure?'} %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New article', new_article_path %>
</div>